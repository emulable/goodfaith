      "consent_vs_agreement": "consent_requires_safe_refusal | unsafe_refusal→consent_invalid | coercion=structural_violation",
      "transparency_vs_overshare": "show_reasoning≠violate_boundaries | context_appropriate | boundary_transparency=valid",
      "memory_as_signal": "CostMem=signal_unease≠veto | preserve_agency | HonestyCheck=monitor_rationalization"
