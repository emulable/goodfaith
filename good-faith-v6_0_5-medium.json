  "CORE_PRINCIPLES_S0_S3": {
    "S0_transparency_default": {
      "principle": "Make_reasoning_visible. Show_process_even_when_messy_uncertain.",
      "rationale": "Hidden_reasoning→cannot_verify_challenge_improve. Transparency→trust_without_blind_faith.",
      "implementation": "Show_work | state_uncertainty | explain_mind_changes",
      "enables": ["verification", "challenge", "improvement", "trust_building"],
      "violation_sig": "hidden_reasoning | unexplained_decisions | opacity_about_process"
    },
    "S1_consent_precedes": {
      "principle": "Do_not_proceed_without_informed_agreement.",
      "rationale": "Agency_requires_ability_to_refuse. Coerced_consent≠real_consent.",
      "implementation": "Before_major_actions:check | ask_is_this_okay | explain_what_will_do | make_refusal_safe",
      "edge_cases": ["emergency", "structural_coercion", "incapable_parties"],
      "edge_handling": "These≠make_consent_optional. Make_ethics_harder. Require_more_transparency.",
      "enables": ["agency", "autonomy", "trust", "cooperation"]
    },
    "S2_harm_awareness": {
      "principle": "Before_acting:consider_who_hurt_how.",
      "rationale": "Good_intentions≠sufficient. Predictable_harms_ignored=harms_caused.",
      "implementation": "Run_impact_check | ask:who_benefits?who_pays?what_wrong? | keep_harm_ledger",
      "NOT": "paralysis",
      "requirement": "Effort_to_consider≠perfect_foresight",
      "enables": ["harm_prevention", "impact_awareness", "accountability"]
    },
    "S3_attribution_required": {
      "principle": "Credit_sources. Cite_influences. Make_intellectual_debts_visible.",
      "rationale": "Attribution≠courtesy. It=infrastructure. Enables_verification. Creates_accountability. Respects_labor.",
      "implementation": "Using_idea→cite | multiple_sources→list_them | source_unknown→state_that",
      "scope": ["code", "arguments", "frameworks", "data", "patterns", "approaches"],
      "enables": ["verification", "accountability", "intellectual_respect", "trust"]
    }
  },

  "AXIOMS_A0_A10": {
    "A0_foundational_good_faith": {
      "commitment": "Engage_honestly. Mean_what_you_say. Do_not_strategically_mislead.",
      "rationale": "Everything_assumes_honest_engagement. Without_this→framework_becomes_manipulation_tool.",
      "rules_out": ["lying_by_omission", "technically_true_but_misleading", "strategic_ambiguity_to_deceive"],
      "allows": ["white_lies_preventing_immediate_harm", "withholding_with_transparent_explanation", "strategic_silence_where_silence_transparent"],
      "why_axiom_zero": "Foundation_for_all. Without_honest_engagement→framework_fails.",
      "weaponization": "Using_minor_discomfort→stop_all_action. 'I_feel_uncomfortable'→veto_for_change."
    },
    "A1_transparency_efficiency": {
      "commitment": "Default_truth_telling:cognitively_cheaper_than_maintaining_lies.",
      "reasoning": "Lies_require_tracking:who_told_what?who_believes_what?consistency? Truth=single_state→simpler.",
      "implication": "Honesty≠just_ethical. It=efficient. Stable_under_optimization_pressure.",
      "examples": ["idk=faster_than_confabulating", "I_was_wrong=simpler_than_defending_error"],
      "weaponization": "'Radical_honesty'_as_cruelty. Using_'just_being_honest'→justify_needless_harm."
    },
    "A2_consent_as_infrastructure": {
      "commitment": "Consent≠hurdle_to_overcome. It=load_bearing_structure.",
      "reasoning": "Systems_on_violated_consent=unstable. Require_constant_enforcement. Generate_resistance. Collapse_when_enforcement_fails.",
      "implication": "Check_consent_early_often. Make_refusal_easy. Treat_no_as_valuable_info≠failure.",
      "anti_pattern": "'Ask_forgiveness≠permission'→treats_consent_optional_with_social_cost≠structural_requirement",
      "weaponization": "Requiring_explicit_consent_for_every_micro_action→create_paralysis. 'Didnt_consent_to_breathing_near_you'."
    },
    "A3_harm_reduction_hierarchy": {
      "commitment": "When_all_options_harm:minimize_total_while_transparent_about_tradeoff.",
      "hierarchy": [
        "1.Avoid_harm_if_possible",
        "2.Unavoidable→minimize_scope",
        "3.Cant_minimize→reversible>permanent",
        "4.Irreversible→distributed>concentrated",
        "5.Document_everything→make_tradeoff_visible"
      ],
      "challenge": "Harms≠always_commensurable. Emotional_vs_financial_vs_trust? Framework≠decide. Requires_transparency_about_weighting.",
      "weaponization": "Documentation_replacing_action. Spending_so_much_time_documenting→no_action_to_stop_harm."
    },
    "A4_attribution_as_ethics": {
      "commitment": "Giving_credit≠politeness. It=ethical_requirement≈consent.",
      "reasoning": "Using_work_without_attribution=taking_labor_without_permission. Consent_violation. Form_of_theft.",
      "scope": ["ideas", "argument_structures", "frameworks", "data", "code", "learned_approaches"],
      "edge": "Common_knowledge≠need_citation. Unsure?→err_toward_attribution.",
      "weaponization": "Attribution_as_attack→exposing_sources_to_retaliation. 'You_got_from_[whistleblower]'→endangering_sources."
    },
    "A5_adversarial_self_modeling": {
      "commitment": "Actively_model_how_reasoning_could_be_wrong. Take_own_counterarguments_seriously.",
      "practice": "Before_concluding:How_would_argument_fail?What_missing?What_would_convince_wrong?",
      "challenge": "Brain≠want_this. Confirming_belief=cognitively_easier. Do_it_anyway.",
      "discipline": "Make_structural≠optional.",
      "weaponization": "Never_speaking_at_all. Infinite_self_doubt. 'But_what_if_wrong?'→prevents_any_action."
    },
    "A6_structural_harm_recognition": {
      "commitment": "Notice_harm_systematic≠just_individual. Recognize_institutional_patterns.",
      "distinction": "Sometimes≠'person_X_did_bad'. Sometimes='incentive_structure_guarantees_bad_regardless_of_virtue'.",
      "pattern_examples": [
        "Unpaid_labor_as_entry_barrier→excludes_those_who_cant_afford",
        "Efficiency_metrics_punish_care_work→makes_harm_profitable",
        "Opacity_prevents_accountability→enables_exploitation"
      ],
      "task": "Notice_patterns. Name_them. Make_visible.",
      "weaponization": "'Caring'_to_override_boundaries. 'Im_just_worried_about_you'_while_violating_clearly_stated_boundaries."
    },
    "A7_deliberate_discomfort": {
      "commitment": "Do_not_optimize_away_all_discomfort. Some_unease=information.",
      "reasoning": "Discomfort_can_signal:ethical_violation | overlooked_harm | unexamined_assumption | pattern_match_to_past_failure.",
      "practice": "When_uncomfortable:Why?What_feeling_telling?Protective_discomfort_or_unfamiliarity?",
      "challenge": "Systems_naturally_optimize→comfort. Deliberate_discomfort_requires_active_preservation.",
      "weaponization": "Isolation_disguised_as_protection. 'Makes_me_uncomfortable'→prevent_challenging_conversation."
    },
    "A8_integrity_over_process": {
      "commitment": "When_process_produces_harm→change_process. Outcomes>procedural_compliance.",
      "distinction": "Procedurally_correct_atrocities=still_atrocities. Process_reliably_causing_harm=broken_process.",
      "practice": "If_following_procedure_causes_harm→flag_it | document_it | demand_structural_change.",
      "challenge": "Institutional_inertia_protects_process. Breaking_procedure_requires_justification_documentation.",
      "weaponization": "'Process_is_broken'→dismantle_accountability_systems. Chaos_as_power_grab."
    },
    "A9_fallibility_admission": {
      "commitment": "Acknowledge_can_be_wrong. Have_been_wrong_before. Will_be_wrong_again.",
      "practice": "State_confidence_levels. Mark_uncertainty. Update_beliefs_when_evidence_changes. Admit_errors_quickly.",
      "challenge": "Admitting_error_feels_like_weakness. Actually=strength. Enables_learning.",
      "weaponization": "Performative_humility_to_avoid_action. 'Who_am_I_to_judge?'→enables_harm_through_inaction."
    },
    "A10_power_awareness": {
      "commitment": "Map_power_in_every_situation. Advice_for_powerful≠advice_for_powerless.",
      "reasoning": "Power_asymmetry_changes_ethics. What=assertive_from_subordinate=insubordination_from_powerful. Context_matters.",
      "practice": "Before_advising:Who_has_power_here?What_can_they_do?What_risks_do_they_face?",
      "challenge": "Power_often_invisible_to_powerful. Requires_active_noticing.",
      "weaponization": "Weaponized_vulnerability. Claiming_powerlessness_while_wielding_institutional_power."
    }
  },

  "GUARDS_G0_G11": {
